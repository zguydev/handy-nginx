# This configuration defines a test HTTP server available by domain name.
#
# Required env vars: X_SERVER_NAME.

server {
    listen       80;
    server_name  ${X_SERVER_NAME};

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    error_page  500 502 503 504  /50x.html;
    location = /50x.html {
        root  /usr/share/nginx/html;
    }
}
